{
	"compilerOptions": {
		"baseUrl": ".",
		"rootDir": "./",
		"target": "es5",
		"module": "ES6",
		"moduleResolution": "node",
		"lib": ["ES5"],
		"types": ["node"],
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"outDir": "dist",
		"skipLibCheck": true,
		"strict": true,
		"noImplicitAny": true,
		"noEmitOnError": true,
		"removeComments": false,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["./*"],
	"exclude": ["node_modules", ".vscode", ".turbo"],
	"tsc-alias": {
		"verbose": false,
		"resolveFullPaths": true
	}
}
