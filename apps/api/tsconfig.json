{
	"compilerOptions": {
		"strict": true,
		"incremental": true,
		"esModuleInterop": true,
		"target": "es2018",
		"module": "es2020",
		"moduleResolution": "node",
		"lib": ["ES5", "DOM"],
		"types": ["node"],
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"outDir": "dist",
		"skipLibCheck": true,
		"noImplicitAny": true,
		"removeComments": false,
		"forceConsistentCasingInFileNames": true,
		"paths": {
			"Loaders/*": ["./Loaders/*"],
			"Router/*": ["./Router/*"],
			"Service/*": ["./Service/*"],
			"Repository/*": ["./Repository/*"],
			"Pkgs/*": ["./Pkgs/*"],
			"Generated/*": ["./Generated/*"]
		},
		// "isolatedDeclarations": true
		"plugins": [
			{
				"transform": "typia/lib/transform"
			}
		],
		"strictNullChecks": true
	},
	"exclude": ["node_modules", ".vscode", ".turbo", "Generated"],
	"tsc-alias": {
		"verbose": false,
		"resolveFullPaths": true
	}
}
